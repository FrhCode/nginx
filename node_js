server {
    listen 80;
    server_name yourney.be.farhandev.cloud www.yourney.be.farhandev.cloud;

    return 301 https://www.yourney.be.farhandev.cloud$request_uri;
}

server {
    listen 443 ssl;
    server_name yourney.be.farhandev.cloud www.yourney.be.farhandev.cloud;

    ssl_certificate /etc/letsencrypt/live/yourney.be.farhandev.cloud/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/yourney.be.farhandev.cloud/privkey.pem; # managed by Certbot

    location / {
        proxy_pass http://localhost:8001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}